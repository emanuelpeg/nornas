<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:sca="http://www.springframework.org/schema/sca"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/sca xsd/spring-sca.xsd">

    <bean id="service.base" class="org.assembly.nornas.serviceImpl.BaseServiceImpl" abstract="true" >
        <property name="dtoMapper">
            <ref bean="dtoMapper"/>
        </property>
    </bean>


    <!-- User -->

    <bean id="service.user" class="org.assembly.nornas.serviceImpl.user.UserServiceImpl" parent="service.base">
        <property name="userDAO">
            <ref bean="dao.user"/>
        </property>
        <property name="synchronizerUser">
            <ref bean="synchronizer.user"/>
        </property>
    </bean>

	<sca:service name="component.userService" 
	             type="org.assembly.nornas.service.user.UserService" target="service.user"/>
	          
	<!-- /User -->

    <!-- Blog -->    
	
	<bean id="service.blog" class="org.assembly.nornas.serviceImpl.blog.BlogServiceImpl" parent="service.base">
        <property name="blogDAO">
            <ref bean="dao.blog"/>
        </property>
        <property name="synchronizerBlog">
            <ref bean="synchronizer.blog"/>
        </property>
    </bean>

	<sca:service name="component.blogService" 
	             type="org.assembly.nornas.service.blog.BlogService" target="service.blog"/>

</beans>